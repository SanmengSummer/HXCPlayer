        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="EduTvPlayer_bottom_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_show_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_hide_anim</item>
    </style>

