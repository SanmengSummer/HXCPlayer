<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_volume"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="@dimen/x50"
    android:background="@color/colorQuarterTransparent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/x5"
    android:visibility="gone">

    <ProgressBar
        android:id="@+id/pb_volume"
        android:layout_width="@dimen/x8"
        android:layout_height="@dimen/y150"
        android:layout_margin="@dimen/x5"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/selector_volume_progress" />

    <ImageView
        android:id="@+id/iv_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x5"
        android:src="@mipmap/video_volume_icon" />
</LinearLayout>