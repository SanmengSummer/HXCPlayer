<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/x70"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".DemoTestActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/re_video"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.summer.chxplayer.widght.hxplayer.PhonePlayer
            android:id="@+id/player_video"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x200" />


        <com.summer.chxplayer.widght.hxplayer.TvPlayer
            android:id="@+id/player_video2"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x200" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:text="zoom" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:text="播放" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:focusable="true"
            android:text="跳转" />
    </LinearLayout>

</LinearLayout>
